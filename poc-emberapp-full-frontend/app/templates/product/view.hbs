<form class="form-inline">
  <h1>Product: {{model.name}}</h1>

  <div class="container-fluid">
    <section class="container">
      <div class="container-page">

        <div class="col-md-10">
          <div class="form-horizontal col-lg-6">
            <p>Name<span>*</span></p>
            <span class="icon-case"><i class="fa fa-tags"></i></span>
            <input type="text" class="form-control" readonly="readonly" value="{{model.name}}" />
         </div>
        </div>

        <div class="col-md-10">
          <div class="form-group col-lg-11">
            <p>Description<span>*</span></p>
            <span class="icon-case"><i class="fa fa-newspaper-o"></i></span>
            <textarea rows="3" class="form-control" readonly="readonly">{{model.description}}</textarea>
          </div>
        </div>

        <div class="col-md-10">
          <div class="form-inline col-lg-3">
            <p>Unit value<span>*</span></p>
            <span class="icon-case"><i class="fa fa-usd"></i></span>
            <input type="text" class="form-control" readonly="readonly" value="{{model.unitValue}}" />
          </div>

          <div class="form-inline col-lg-3">
            <p>Serial number<span>*</span></p>
            <span class="icon-case"><i class="fa fa-gears"></i></span>
            <input type="text" class="form-control" readonly="readonly" value="{{model.serialNumber}}" />
          </div>

          <div class="form-inline col-lg-3">
            <p>Acquisition Date <span>*</span></p>
            <span class="icon-case"><i class="fa fa-calendar-check-o"></i></span>
            <input type="text" class="form-control" readonly="readonly" value="{{model.acquisitionDate}}" />
          </div>
        </div>

        <div class="col-md-10">
          <div class="form-inline col-lg-5">
            <p>Category<span>*</span></p>
            <span class="icon-case"><i class="fa fa-caret-square-o-up"></i></span>
            <input type="text" class="form-control" readonly="readonly" value="{{model.category}}" />
          </div>

          <div class="form-inline col-lg-5">
            <p>Subcategory<span>*</span></p>
            <span class="icon-case"><i class="fa fa-caret-square-o-down"></i></span>
            <input type="text" class="form-control" readonly="readonly" value="{{model.subCategory}}" />
          </div>
        </div>

        <div class="col-md-10">
          <div class="form-inline col-lg-5">
            <p>Status<span>*</span></p>
            <div class="btn-group" data-toggle="buttons">
              <label class="btn btn-primary active">
                {{input type="radio" autocomplete="off" checked=model.isAvailable}}Available
              </label>
              <label class="btn btn-primary">
                {{input type="radio" autocomplete="off" checked=model.isAvailable}}In Use
              </label>
            </div>
          </div>

          <div class="form-inline col-lg-5">
            <p>Vendor phone<span>*</span></p>
            <span class="icon-case"><i class="fa fa-phone"></i></span>
            <input type="text" class="form-control" readonly="readonly" value="{{model.vendorPhone}}" />
          </div>
        </div>

        <div class="col-md-10">
          <div class="form-inline col-lg-8">
            <p>Vendor mail<span>*</span></p>
            <span class="icon-case"><i class="fa fa-envelope"></i></span>
            <input type="text" class="form-control" readonly="readonly" value="{{model.vendorMail}}" />
          </div>
        </div>

      </div>
    </section>
  </div>

  <button type="submit" class="bouton-return" {{action 'cancel' model}}>Back</button>

</form>